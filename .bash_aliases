alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
alias lo='la -l'
alias cl='clear'
alias clr='clear'
alias nf='neofetch --ascii_distro $@'
alias cnf='clear && neofetch --ascii_distro $@'
alias cls='clear && ls'
alias sau='sudo apt update'
alias alu='apt list --upgradable'
alias sauy='sudo apt upgrade -y'
alias sai='sudo apt install $@'
alias saiy='sudo apt -y install $@'
alias sdi='sudo dpkg -i $@'
alias sar='sudo apt rinstall $@'
alias sap='sudo apt purge $@'
alias sapr='sudo apt purge --autoremove $@'
alias sac='sudo apt clean && sudo apt autoclean'
alias duh='du -h $@'
alias dua='du -ah $@'
